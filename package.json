{
  "name": "petite-utils",
  "version": "0.0.12",
  "private": false,
  "type": "module",
  "source": "src/index.ts",
  "amdName": "PU",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "unpkg": "./dist/index.umd.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "CHANGELOG.md",
    "!/src/**/*.test.ts"
  ],
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "microbundle",
    "release": "release-it",
    "prepare": "husky",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@release-it/conventional-changelog": "^8.0.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@vitest/coverage-v8": "^1.6.0",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.2.1",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "microbundle": "^0.15.1",
    "prettier": "^3.3.3",
    "release-it": "^17.10.0",
    "typescript": "^5.7.2",
    "unplugin-auto-import": "^0.17.8",
    "vite": "^5.4.11",
    "vitepress": "^1.5.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "debounce",
    "throttle",
    "petite-utils",
    "petite",
    "petite-vue",
    "utils",
    "utility",
    "tool",
    "library",
    "tiny-tool",
    "small-tool"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jackchoumine/petite-utils.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "homepage": "https://github.com/jackchoumine/petite-utils?tab=readme-ov-file#petite-utils",
  "author": "Jack Chou <zhouqijun4job@163.com>",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.cjs"
    }
  }
}
